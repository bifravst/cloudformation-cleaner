{
  "name": "@bifravst/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks and log groups, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/cloudformation-cleaner.git"
  },
  "keywords": [
    "aws",
    "cloudformation"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bifravst/cloudformation-cleaner/issues"
  },
  "homepage": "https://github.com/bifravst/cloudformation-cleaner#readme",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.675.0",
    "@aws-sdk/client-lambda": "3.675.0",
    "@bifravst/eslint-config-typescript": "6.1.18",
    "@bifravst/prettier-config": "1.1.1",
    "@commitlint/config-conventional": "19.5.0",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.36",
    "@types/glob": "8.1.0",
    "@types/node": "20.16.13",
    "@types/yazl": "2.4.5",
    "aws-cdk-lib": "2.162.1",
    "cdk": "2.162.1",
    "constructs": "10.4.2",
    "glob": "11.0.0",
    "husky": "9.1.6",
    "tsx": "4.19.1",
    "yazl": "3.1.0"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "3.675.0",
    "@aws-sdk/client-iam": "3.675.0",
    "@aws-sdk/client-s3": "3.675.0",
    "@aws-sdk/client-ssm": "3.675.0",
    "@bifravst/cloudformation-helpers": "9.1.1",
    "@bifravst/from-env": "3.0.2"
  },
  "prettier": "@bifravst/prettier-config"
}
