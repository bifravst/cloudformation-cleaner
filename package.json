{
  "name": "@nordicsemiconductor/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks and log groups, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js.git"
  },
  "keywords": [
    "aws",
    "cloudformation"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js#readme",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.515.0",
    "@aws-sdk/client-lambda": "3.515.0",
    "@bifravst/eslint-config-typescript": "6.0.4",
    "@bifravst/prettier-config": "1.0.0",
    "@commitlint/config-conventional": "18.6.2",
    "@swc/cli": "0.3.9",
    "@swc/core": "1.4.1",
    "@types/glob": "8.1.0",
    "@types/node": "20.11.25",
    "@types/yazl": "2.4.5",
    "aws-cdk-lib": "2.128.0",
    "cdk": "2.128.0",
    "constructs": "10.3.0",
    "glob": "10.3.10",
    "husky": "9.0.11",
    "tsx": "4.7.1",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "3.515.0",
    "@aws-sdk/client-iam": "3.515.0",
    "@aws-sdk/client-s3": "3.515.0",
    "@aws-sdk/client-ssm": "3.515.0",
    "@nordicsemiconductor/from-env": "3.0.0"
  },
  "prettier": "@bifravst/prettier-config"
}
